<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_item_rv_friend_search_picture"
            android:layout_width="@dimen/imageview_list_picture"
            android:layout_height="@dimen/imageview_list_picture"
            android:layout_gravity="center" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_item_rv_friend_search_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="123"
            android:textColor="#000"
            android:textSize="24sp" />
        <TextView
            android:layout_marginLeft="100dp"
            android:id="@+id/tv_item_rv_friend_search_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="加為好友"
            style="@style/AppTheme.TextView"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>